{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "presentation": {
    "echo": true,
    "reveal": "silent",
    "focus": false,
    "panel": "shared",
    "showReuseMessage": false,
    "clear": true
  },
  "tasks": [
    {
      "label": "clean",
      "type": "shell",
      "command": "rm -rf dist; mkdir dist",
      "problemMatcher": []
    },
    {
      "label": "format",
      "type": "shell",
      "command": "latexindent -l=config/latexIndent.yaml -w main.tex",
      "problemMatcher": []
      },
    {
      "label": "generate",
      "type": "shell",
      "command": "pdflatex -output-directory=dist -jobname=notes main.tex",
      "problemMatcher": []
    }
  ],
}